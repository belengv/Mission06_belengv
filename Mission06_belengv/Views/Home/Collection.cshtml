@{
    ViewData["Title"] = "Collection";
}
@model List<ApplicationResponse>

<table class="table table-bordered table-striped">
    <!--Creating the table columns-->
    <thead class=" font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>LentTo</td>
            <td>Notes</td>
        </tr>
    </thead>
    <!--Passin the database info to fill the rows-->
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <!--Displays the Category name and not ID number-->
                <td>@x.Category.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>

                <!--Adding edit and delete options and passing our entry ID-->
                <td><a asp-controller="Home" asp-action="Edit" asp-route-entryid="@x.EntryId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-entryid="@x.EntryId">Delete</a></td>
            </tr>
        }
    </tbody>

</table>